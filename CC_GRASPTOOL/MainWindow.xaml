<Window x:Class="CC_GRASPTOOL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="demo" Height="830.5" Width="800">
    <Grid RenderTransformOrigin="0.5,0.5">
        <Button Content="清空数据" HorizontalAlignment="Left" Margin="39,678,0,0" VerticalAlignment="Top" Width="114" Click="Button_Click_Clear" Height="42"/>
        <Button Content="用cookie请求网页" HorizontalAlignment="Left" Margin="189,678,0,0" VerticalAlignment="Top" Width="112" Click="Button_Click_Request" Height="42"/>
        <ListView Name="ui_listview_ck" HorizontalAlignment="Left" Height="232" VerticalAlignment="Top" Width="782">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="序号" Width="50" DisplayMemberBinding ="{Binding ck_id}"/>
                    <GridViewColumn Header="cookie" Width="500" DisplayMemberBinding ="{Binding ck_cookie}"/>
                    <GridViewColumn Header="结果" Width="100" DisplayMemberBinding ="{Binding ck_result}"/>
                    <GridViewColumn Header="运行状态" Width="100" DisplayMemberBinding ="{Binding ck_state}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <ListView x:Name="ui_listview_return" HorizontalAlignment="Left" Height="251" VerticalAlignment="Top" Width="782" Margin="0,232,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="id" Width="25" DisplayMemberBinding ="{Binding return_id}"/>
                    <GridViewColumn Header="返回数据" Width="690" DisplayMemberBinding ="{Binding return_data}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <RichTextBox Name="ui_rtext_ckinput" HorizontalAlignment="Left" Height="44" Margin="39,506,0,0" VerticalAlignment="Top" Width="727">
            <FlowDocument>
                <Paragraph>
                    <Run Text="输入cookies"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <RichTextBox x:Name="ui_rtext_urlinput" HorizontalAlignment="Left" Height="44" Margin="39,555,0,0" VerticalAlignment="Top" Width="727">
            <FlowDocument>
                <Paragraph>
                    <Run Text="输入url"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
    </Grid>
</Window>
