<Window x:Class="CC_GRASPTOOL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="辅助byhcc" Height="830.5" Width="800">
    <Grid RenderTransformOrigin="0.5,0.5">
        <Button Content="清空数据" HorizontalAlignment="Left" Margin="113,710,0,0" VerticalAlignment="Top" Width="114" Click="Button_Click_Clear" Height="42"/>
        <Button Content="请求网页" HorizontalAlignment="Left" Margin="536,710,0,0" VerticalAlignment="Top" Width="112" Click="Button_Click_Request" Height="42"/>
        <Button Content="开始套cookies" HorizontalAlignment="Left" Margin="318,710,0,0" VerticalAlignment="Top" Width="112" Click="Button_Click_Cookie" Height="42"/>

        <ListView Name="ui_listview_ck" HorizontalAlignment="Left" Height="187" VerticalAlignment="Top" Width="782">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="序号" Width="50" DisplayMemberBinding ="{Binding ck_id}"/>
                    <GridViewColumn Header="cookie" Width="500" DisplayMemberBinding ="{Binding ck_cookie}"/>
                    <GridViewColumn Header="结果" Width="100" DisplayMemberBinding ="{Binding ck_result}"/>
                    <GridViewColumn Header="运行状态" Width="100" DisplayMemberBinding ="{Binding ck_state}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <ListView x:Name="ui_listview_return" HorizontalAlignment="Left" Height="291" VerticalAlignment="Top" Width="782" Margin="0,192,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="id" Width="50" DisplayMemberBinding ="{Binding return_id}"/>
                    <GridViewColumn Header="返回数据" Width="690" DisplayMemberBinding ="{Binding return_data}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBox Name="ui_rtext_ckinput" 
                 HorizontalAlignment="Left" 
                 Height="60" Margin="69,554,0,0" 
                 VerticalAlignment="Top" 
                 Width="697"
                 AcceptsReturn="True"
                 Text="">
        </TextBox>
        <TextBox x:Name="ui_rtext_urlinput" 
                 HorizontalAlignment="Left" 
                 Height="60" 
                 Margin="69,489,0,0" 
                 VerticalAlignment="Top" 
                 Width="697"
                 AcceptsReturn="True"
                 Text="">
        </TextBox>
        <TextBox Name="ui_text_numinput" 
                 HorizontalAlignment="Left" 
                 Height="29" Margin="69,620,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="63"
                 AcceptsReturn="True"
                 Text="1" />
        <Label Content="url:" HorizontalAlignment="Left" Margin="24,508,0,0" VerticalAlignment="Top"/>
        <Label Content="cookie:" HorizontalAlignment="Left" Margin="10,572,0,0" VerticalAlignment="Top"/>
        <Label Content="请求次数:" HorizontalAlignment="Left" Margin="3,620,0,0" VerticalAlignment="Top"/>
        <Label Content="请求参数:" HorizontalAlignment="Left" Margin="179,624,0,0" VerticalAlignment="Top"/>
        <Label Content="参数用&amp;连接,例: code=1020&amp;num=1235" HorizontalAlignment="Left" Margin="252,678,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="ui_text_paraminput" 
        	HorizontalAlignment="Left" 
        	Height="53" Margin="252,620,0,0" 
        	TextWrapping="Wrap" 
        	VerticalAlignment="Top" 
        	Width="514"
            AcceptsReturn="True"
        	Text="" />
    </Grid>
</Window>
