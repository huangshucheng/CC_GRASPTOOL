<Window x:Class="CC_GRASPTOOL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="demo" Height="709" Width="800">
    <Grid RenderTransformOrigin="0.5,0.5">
        <Button Content="取cookie" HorizontalAlignment="Left" Margin="116,617,0,0" VerticalAlignment="Top" Width="113" Click="Button_Click" Height="42"/>
        <Button Content="用cookie请求" HorizontalAlignment="Left" Margin="448,617,0,0" VerticalAlignment="Top" Width="112" Click="Button_Click_1" Height="42"/>
        <ListView Name="ui_listview" HorizontalAlignment="Left" Height="251" VerticalAlignment="Top" Width="533">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="序号" Width="50" DisplayMemberBinding ="{Binding ck_id}"/>
                    <GridViewColumn Header="cookie" Width="200" DisplayMemberBinding ="{Binding ck_cookie}"/>
                    <GridViewColumn Header="结果" Width="100" DisplayMemberBinding ="{Binding ck_result}"/>
                    <GridViewColumn Header="运行状态" Width="100" DisplayMemberBinding ="{Binding ck_state}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBlock HorizontalAlignment="Left" Margin="21,256,0,0" TextWrapping="Wrap" Text="返回数据：" VerticalAlignment="Top" FontSize="20"/>
        <TextBlock Name="text_response" 
                   HorizontalAlignment="Left" 
                   Margin="21,291,0,0" 
                   TextWrapping="NoWrap" 
                   Text="null" 
                   VerticalAlignment="Top" 
                   FontSize="15"/>
    </Grid>
</Window>
